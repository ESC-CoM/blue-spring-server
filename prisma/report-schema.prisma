generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/prisma/report"
}

datasource db {
  provider = "postgresql"
  url      = env("REPORT_DATABASE_URL")
}

model UserReport {
  id           String      @id @db.Uuid
  reporterId   String      @db.Uuid
  targetUserId String      @db.Uuid
  content      String
  createdAt    DateTime    @default(now())
  state        ReportState
}

model MeetingReport {
  id              String      @id @db.Uuid
  reporterId      String      @db.Uuid
  targetMeetingId String      @db.Uuid
  content         String
  createdAt       DateTime    @default(now())
  state           ReportState
}

enum ReportState {
  PENDING
  PROCESSING
  RESOLVED
}
