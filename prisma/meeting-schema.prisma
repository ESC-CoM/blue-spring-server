generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/prisma/meeting"
}

datasource db {
  provider = "postgresql"
  url      = env("MEETING_DATABASE_URL")
}

model Meeting {
  id                 String           @id @db.Uuid
  ownerGroupId       String           @db.Uuid
  participantGroupId String?          @db.Uuid
  timeVoteId         String?          @db.Uuid
  mapVoteId          String?          @db.Uuid
  ownerGroup         MeetingGroup     @relation("owner", fields: [ownerGroupId], references: [id])
  participantGroup   MeetingGroup?    @relation("participant", fields: [participantGroupId], references: [id])
  requests           MeetingRequest[]
}

model MeetingRequest {
  id               String              @id @db.Uuid
  meetingId        String              @db.Uuid
  requesterGroupId String              @db.Uuid
  state            MeetingRequestState
  meeting          Meeting             @relation(fields: [meetingId], references: [id])
  requesterGroup   MeetingGroup        @relation(fields: [requesterGroupId], references: [id])
}

model MeetingGroup {
  id            String                    @id @db.Uuid
  ownerId       String                    @db.Uuid
  title         String                    @db.VarChar(20)
  content       String
  ownMeeting    Meeting[]                 @relation("owner")
  joinedMeeting Meeting[]                 @relation("participant")
  participants  MeetingGroupParticipant[]
  sentRequests  MeetingRequest[]
}

model MeetingGroupParticipant {
  id             String       @id @db.Uuid
  meetingGroupId String       @db.Uuid
  participantId  String       @db.Uuid
  meetingGroup   MeetingGroup @relation(fields: [meetingGroupId], references: [id])
}

enum MeetingRequestState {
  PENDING
  REJECT
  REPENDING
  BANNED
}
